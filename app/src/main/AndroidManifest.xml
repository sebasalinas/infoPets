<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="egt.infopets">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Funciones.FirstScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER"
                    android:windowSoftInputMode="stateHidden" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Funciones.AddPet"
            android:parentActivityName=".Funciones.FirstScreen"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Funciones.AddEspecie"
            android:parentActivityName=".Funciones.FirstScreen"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Funciones.SearchPet"
            android:parentActivityName=".Funciones.FirstScreen"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Funciones.AddRaza"
            android:parentActivityName=".Funciones.FirstScreen"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Funciones.Estadisticas"
            android:parentActivityName=".Funciones.FirstScreen"
            android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>